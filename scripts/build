#!/bin/sh

rm -rf dist &&
tsc --project src --declaration --outDir dist/modules --declarationDir dist/types &&
tsc --project src --target es2015 --lib es2017 --downlevelIteration --module amd --outDir dist/amd &&
tsc --project src --target es2015 --lib es2017 --downlevelIteration --module commonjs --outDir dist/commonjs &&
tsc --project test
